{
  "name": "winter-love-graphql-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:bichikim/winter-love-graphql-server.git",
  "author": "Bichi Kim <bichi@live.co.kr>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ENV_FILE=.env.dev ts-node-dev --transpileOnly -r tsconfig-paths/register --project tsconfig.node.json src/index.ts",
    "build": "tsc -p tsconfig.amd.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "start": "ts-node -r tsconfig-paths/register --project tsconfig.node.json src/index.ts",
    "doc": "typedoc -out ./docs ./src --media ./media",
    "test": "npm run test:unit",
    "lint": "eslint \"src/\"",
    "test:unit": "mocha \"test/**/*.spec.ts\"",
    "test:watch": "mocha \"test/**/*.spec.ts\" --watch --extension ts",
    "preversion": "npm run test && npm run build && npm run build:esm"
  },
  "dependencies": {
    "apollo-server": "^2.9.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.10.0",
    "dotenv": "^8.1.0",
    "globby": "^10.0.1",
    "graphql": "^14.5.7",
    "graphql-redis-subscriptions": "^2.1.1",
    "graphql-subscriptions": "^1.1.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.5"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/ioredis": "^4.0.17",
    "@types/lodash": "^4.14.138",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.17",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-sort-class-members": "^1.5.0",
    "eslint-plugin-vue": "^5.2.3",
    "mocha": "^6.2.0",
    "mongodb-memory-server": "^5.2.3",
    "nyc": "^14.1.1",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  }
}
